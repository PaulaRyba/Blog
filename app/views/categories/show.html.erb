<p id="notice"><%= notice %></p>

<h1><%= @category.name %><small><%= link_to 'Back', categories_path %> |<%= link_to 'Edit', edit_category_path(@category) %></small></h1>

    <% @category.posts.each do |post| %>
    <article>

        <h3><%= link_to post.title, [post.category, post] %></h3>
        <h6>Written by <a href="#">Ryba≈Çke</a> on <%= post.created_at %></h6>
        <%= link_to 'Edit', edit_post_path(post) %> |<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <p><%= post.content %></p>

      </article>

      <hr />

    <% end %>
